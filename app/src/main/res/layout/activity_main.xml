<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Ronda"
            android:textSize="20sp" android:id="@+id/tronda"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/bazul"
            app:layout_constraintStart_toStartOf="@+id/tronda"
            android:layout_marginTop="148dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/azul_apagado"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/bamarillo"
            app:layout_constraintStart_toEndOf="@+id/bazul"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/bazul" android:background="@color/amarillo_apagado"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/bverde"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/bazul"
            app:layout_constraintEnd_toStartOf="@+id/brojo" android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="@+id/bazul" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:background="@color/verde_apagado"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/brojo"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/bamarillo" app:layout_constraintEnd_toEndOf="@+id/bamarillo"
            android:background="@color/rojo_apagado"/>
    <ImageButton
            android:layout_width="69dp"
            android:layout_height="68dp" app:srcCompat="@drawable/ic_play"
            android:id="@+id/bplay"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="@string/todo"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/bamarillo"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nronda" app:layout_constraintStart_toEndOf="@+id/tronda"
            android:layout_marginStart="16dp" android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/tronda"/>
    <TextView
            android:text="@string/restante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trestante" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tronda" app:layout_constraintStart_toStartOf="@+id/tronda"
            android:textSize="20sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nrestante"
            app:layout_constraintTop_toTopOf="@+id/trestante" app:layout_constraintStart_toEndOf="@+id/trestante"
            android:layout_marginStart="24dp" android:textSize="20sp"/>

</android.support.constraint.ConstraintLayout>