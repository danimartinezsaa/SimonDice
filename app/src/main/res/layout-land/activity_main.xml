<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Ronda"
            android:textSize="20sp" android:id="@+id/tronda"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/bazul"
            android:background="@color/azul_apagado"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/nrestante"
            android:layout_marginStart="100dp"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/bamarillo"
            android:background="@color/amarillo_apagado"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/bazul"
            android:layout_marginStart="20dp"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/bverde"
            android:background="@color/verde_apagado"
            app:layout_constraintStart_toEndOf="@+id/nrestante"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/bazul"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/brojo"
            android:background="@color/rojo_apagado"
            app:layout_constraintStart_toEndOf="@+id/bverde"
            android:layout_marginStart="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/bamarillo"/>
    <ImageButton
            android:layout_width="69dp"
            android:layout_height="68dp" app:srcCompat="@drawable/ic_play"
            android:id="@+id/bplay"
            android:contentDescription="@string/todo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nronda"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/tronda"
            android:layout_marginStart="15dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/restante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trestante"
            android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tronda"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nrestante"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/trestante" android:layout_marginStart="15dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/nronda"/>

</android.support.constraint.ConstraintLayout>